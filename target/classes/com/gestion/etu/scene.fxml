<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion.etu.MainController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <Label text="ID" />
            <TextField fx:id="idField" />
            <Label text="Nom" />
            <TextField fx:id="nomField" />
            <Label text="Prénom" />
            <TextField fx:id="prenomField" />
            <Label text="Date d'embauche" />
            <DatePicker fx:id="dateEmbauchePicker" />
            <Label text="Poste" />
            <TextField fx:id="posteField" />
            <Label text="Salaire" />
            <TextField fx:id="salaireField" />
            <Label text="Service" />
            <TextField fx:id="serviceField" />
            <Button fx:id="addButton" onAction="#addEmploye" text="Ajouter" />
            <Button fx:id="updateButton" onAction="#updateEmploye" text="Mettre à jour" />
            <Button fx:id="deleteButton" onAction="#deleteEmploye" text="Supprimer" />
         </children>
      </VBox>
   <TableView fx:id="employesTable" layoutX="250.0" layoutY="50.0" prefHeight="500.0" prefWidth="530.0" onMouseClicked="#handleRowSelect">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="40.0" text="ID" />
          <TableColumn fx:id="nomColumn" prefWidth="90.0" text="Nom" />
            <TableColumn fx:id="prenomColumn" prefWidth="90.0" text="Prénom" />
            <TableColumn fx:id="dateEmbaucheColumn" prefWidth="120.0" text="Date d'embauche" />
            <TableColumn fx:id="posteColumn" prefWidth="90.0" text="Poste" />
            <TableColumn fx:id="salaireColumn" prefWidth="70.0" text="Salaire" />
            <TableColumn fx:id="serviceColumn" prefWidth="90.0" text="Service" />
        </columns>
      </TableView>
      <TextField fx:id="searchField" layoutX="250.0" layoutY="14.0" prefWidth="150.0" promptText="Rechercher par nom ou ID" />
      <Button fx:id="searchButton" layoutX="410.0" layoutY="14.0" onAction="#searchEmploye" text="Rechercher" />
      <ComboBox fx:id="filterComboBox" layoutX="500.0" layoutY="14.0" prefWidth="150.0" promptText="Filtrer par" />
      <Button fx:id="filterButton" layoutX="660.0" layoutY="14.0" onAction="#filterEmployes" text="Filtrer" />
   </children>
</AnchorPane>
